local xdebugOutfile=${DEV_WORKPATH}/conf/xdebug;

dc yml_local;
dc service php;

dc nodeps;
dc interactive;
dc projectpath;
dc user;
dc ignore_orphans;

if [ $# -lt 1 ]; then
    dc cmd bash -l;
fi

if test -f "${xdebugOutfile}"; then
    dc opt -e XDEBUG_MODE=debug
    dc opt -e XDEBUG_SESSION=1
    dc opt -e PHP_IDE_CONFIG="serverName=`cat $xdebugOutfile`"
fi

dc run "$@";
return $?;

